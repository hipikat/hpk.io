  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "chokidar": "^3.6.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "daisyui": "^4.12.14",
    "eslint": "^9.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.1",
    "postcss-sass": "^0.5.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "sass": "^1.82.0",
    "sass-loader": "^16.0.4",
    "tailwindcss": "^3.4.16",
    "terser-webpack-plugin": "^5.3.10",
    "theme-change": "^2.5.0",
    "webpack": "^5.97.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "run-p webpack:prod webpack:debug",
    "webpack:prod": "webpack -c config/webpack.config.js",
    "webpack:debug": "webpack -c config/webpack.config.js --env debug",
    "watch:webpack": "concurrently --names '🐛>build,🦋>build' --prefix-colors 'blue,cyan' 'npm run watch:webpack:debug' 'npm run watch:webpack:prod'",
    "watch:webpack:prod": "webpack -c config/webpack.config.js --watch",
    "watch:webpack:debug": "webpack -c config/webpack.config.js --env debug --watch",
    "collectstatic": "just dj collectstatic --no-input",
    "watch:collectstatic": "chokidar 'build/webpack/**' --initial --debounce 100 -c 'npm run collectstatic'",
    "build": "run-s webpack collectstatic",
    "watch:build": "concurrently --names '🐛>build,🦋>build,🥚static' --prefix-colors 'blue,cyan,green' 'npm run watch:webpack:debug' 'npm run watch:webpack:prod' 'npm run watch:collectstatic'",
    "watch:build:debug": "concurrently --names '🐛>build,🥚>static' --prefix-colors 'blue,green' 'npm run watch:webpack:debug' 'npm run watch:collectstatic'"
  }
}
