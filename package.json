  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@playwright/test": "^1.55.0",
    "chokidar": "^3.6.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript-eslint": "^8.41.0"
  },
  "scripts": {
    "webpack": "run-p webpack:prod webpack:debug",
    "webpack:debug": "webpack -c config/webpack.config.mjs --env debug",
    "webpack:prod": "webpack -c config/webpack.config.mjs",
    "watch:webpack": "concurrently --names '🐛>build,🦋>build' --prefix-colors 'blue,cyan' 'npm run watch:webpack:debug' 'npm run watch:webpack:prod'",
    "watch:webpack:prod": "webpack -c config/webpack.config.mjs --watch",
    "watch:webpack:debug": "webpack -c config/webpack.config.mjs --env debug --watch",
    "collectstatic": "just dj collectstatic --no-input",
    "watch:collectstatic": "chokidar 'build/webpack/**' --initial --debounce 100 -c 'npm run collectstatic'",
    "build": "run-s webpack collectstatic",
    "build:debug": "run-s webpack:debug collectstatic",
    "build:prod": "run-s webpack:prod collectstatic",
    "watch:build": "concurrently --names '🐛>build,🦋>build,🥚static' --prefix-colors 'blue,cyan,green' 'npm run watch:webpack:debug' 'npm run watch:webpack:prod' 'npm run watch:collectstatic'",
    "watch:build:debug": "concurrently --names '🐛>build,🥚>static' --prefix-colors 'blue,green' 'npm run watch:webpack:debug' 'npm run watch:collectstatic'",
    "watch:build:prod": "concurrently --names '🦋>build,🥚>static' --prefix-colors 'cyan,green' 'npm run watch:webpack:prod' 'npm run watch:collectstatic'"
  }
}
